  "version": "2.0.0",
  "tasks": [
    {
      "label": "‚¨ÜÔ∏è UP (GHA)",
      "detail": "Build if needed then run a local docker environment",
      "type": "shell",
      "command": "GIT_COMMIT=$(git rev-parse HEAD) docker-compose up",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚¨áÔ∏è DOWN (GHA)",
      "detail": "Drop any stopped containers",
      "type": "shell",
      "command": "docker-compose down",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üßπ CLEAN (GHA)",
      "detail": "Will drop the containers, then remove the related images and volumes",
      "type": "shell",
      "command": "docker-compose down --rmi local -v",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üèóÔ∏è REBUILD (GHA)",
      "detail": "Drop and remove everything, then rebuild with no cache",
      "type": "shell",
      "command": "docker-compose down --rmi local -v && docker-compose build --no-cache",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üîé LINT (GHA)",
      "detail": "Run lint checks against the code",
      "type": "shell",
      "command": "docker-compose exec app npm run lint",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "‚úÖ TEST (GHA)",
      "detail": "Run unit tests in docker",
      "type": "shell",
      "command": "docker-compose exec app npm test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "üíª OPEN (CMA)",
      "detail": "Will open /bin/sh in the running 'app' container",
      "type": "shell",
      "command": "docker-compose exec app /bin/sh",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
